<h3>轮播图管理</h3>
<hr>
<%= search_form_for [:admin,@q] do |f| %>
   <strong>内部名称</strong>
   <p>
   <%= f.search_field :alise_title_cont %>
   <%= f.submit "搜索",class:"btn btn-primary" %>
   </p>
   <p>
   <%= link_to "新建", new_admin_ad_path, class:"btn btn-info"  %>
   </p>
<% end %>
<%= table_for(@ads, class: 'table table-bordered') do |t|%>
  <% t.column :title, "标题"%>
  <% t.column :url, "URL"%>
  <% t.column :alise_title, "内部名称"%>
  <% t.column :image, "大图" do |url|%>
    <%= image_tag(url.image_url)%>
  <% end %>
  <% t.column :image_small, "小图" do |url|%>
    <%= image_tag(url.image_url)%>
  <% end %>
  <% t.column :status, "状态"%>
  <% t.column :actions, "操作" do |ad|%>
    <%= link_to "更新", edit_admin_ad_path(ad)%>
    <%= link_to "查看", admin_ad_path(ad)%>
    <%= link_to "删除", admin_ad_path(ad), :method => :delete%>
  <% end %>
<% end %>
