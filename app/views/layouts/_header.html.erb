    <div class="header">
      <div class="top">
        <a href="<%= root_path %>">
          <%= image_tag "logo.png" %>
        </a>
        <ul class="top-nav">
          <li><%= link_to "返回开课吧首页", root_path %></li>
          <% if current_user %>
            <li><%= link_to current_user.name, current_user %></li>
          <% else %>
            <li><%= link_to "注册", "http://www.kaikeba.com/users/sign_up", target: '_blank' %>
            </li>
            <li><%= link_to "登录", login_path %></li>
          <% end %>
        </ul>
      </div>
      <% unless (controller_name == 'topics' && action_name == 'new') %>
        <ul class="nav">
          <li><a href="/">首页</a></li>
          <% Node.list.each do |node| %>
          <li><%= link_to node.title, topics_path(node_id: node.id)%></li>
          <% end %>
          <li><a class="more" href="">更多</a></li>
        </ul>
      <% end %>
    </div>